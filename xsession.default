#/bin/sh

WALLPAPER=~/.wallpaper
XMODMAP=~/.xmodmap
export ENVIRONMENT=default

# set the background
[ -r $WALLPAPER ] && hsetroot -full $WALLPAPER

# remap keys
[ -r $XMODMAP ] && xmodmap $XMODMAP

# enable latchlock and sticky keys
xkbset exp 60 =sticky =twokey =latchlock
xkbset sticky -twokey latchlock

# start Dropbox
dropbox start

# go!
xmonad
